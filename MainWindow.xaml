<Window x:Class="_312554HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312554HelloWorld"
        mc:Ignorable="d"
        Title="GreetBot" Height="600" Width="1000" FontSize="28">
    <StackPanel>
        <Label x:Name="message">Hello, World</Label>
        <TextBox x:Name="txtName" />
        <Button x:Name="btnGreeting" Content="Click for greeting" Click="BtnGreeting_Click" />
    </StackPanel>
</Window>